<dashboard>
	<label>My Dashboard</label>
	<stylesheet>
		<![CDATA[
            .vertical-stack {
                display: flex;
                flex-direction: column;
                width: 100%;
            }
            .vertical-stack .panel {
                margin-bottom: 10px;
            }
            .horizontal-stack {
                display: flex;
                flex-direction: row;
                width: 100%;
                gap: 10px;
            }
        ]]>
	</stylesheet>
	<row>
		<!-- Other panels (charts) in the same row, laid out horizontally -->
		<panel>
			<chart>
				<title>My Chart 1</title>
				<search>
					<query>your_search_query_for_chart_1</query>
				</search>
			</chart>
		</panel>
		<panel>
			<chart>
				<title>My Chart 2</title>
				<search>
					<query>your_search_query_for_chart_2</query>
				</search>
			</chart>
		</panel>

		<!-- Container for vertically stacked single panels -->
		<panel>
			<html>
				<![CDATA[
                    <div class="vertical-stack">
                        <div class="panel">
                            <single>
                                <title>Single Panel 1</title>
                                <search>
                                    <query>your_search_query_1</query>
                                </search>
                                <option name="underLabel">Your Label 1</option>
                            </single>
                        </div>
                        <div class="panel">
                            <single>
                                <title>Single Panel 2</title>
                                <search>
                                    <query>your_search_query_2</query>
                                </search>
                                <option name="underLabel">Your Label 2</option>
                            </single>
                        </div>
                    </div>
                ]]>
			</html>
		</panel>
	</row>
</dashboard>