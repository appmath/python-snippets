<dashboard version="1.1">
	<label>Portal Dashboard</label>
	<row>
		<!-- Other panels (charts) in the same row, laid out horizontally -->
		<panel>
			<chart>
				<title>My Chart 1</title>
				<search>
					<query>your_search_query_for_chart_1</query>
				</search>
			</chart>
		</panel>
		<panel>
			<chart>
				<title>My Chart 2</title>
				<search>
					<query>your_search_query_for_chart_2</query>
				</search>
			</chart>
		</panel>

		<!-- Container for vertically stacked single panels using HTML -->
		<panel>
			<html>
				<div style="display: flex; flex-direction: column; width: 100%;">
					<div style="margin-bottom: 10px;">
						<single>
							<title>Single Panel 1</title>
							<search>
								<query>your_search_query_1</query>
							</search>
							<option name="underLabel">Your Label 1</option>
						</single>
					</div>
					<div style="margin-bottom: 10px;">
						<single>
							<title>Single Panel 2</title>
							<search>
								<query>your_search_query_2</query>
							</search>
							<option name="underLabel">Your Label 2</option>
						</single>
					</div>
				</div>
			</html>
		</panel>
	</row>
</dashboard>